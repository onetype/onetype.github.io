{
  "name": "onetype",
  "private": true,
  "version": "1.0.0",
  "description": "The official documentation site for OneType.",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text-summary",
    "lint:scripts": "eslint --config .eslint.json **/*.js",
    "lint:styles": "sass-lint --config .scss-lint.yml --verbose --no-exit",
    "pretest": "npm run -s lint:styles && npm run -s lint:scripts",
    "test": "npm run -s coverage -- mocha tests/**.spec.js --require @babel/register"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm t"
    }
  },
  "nyc": {
    "exclude": [
      "tests/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onetype/onetype.github.io.git"
  },
  "keywords": [
    "Data Science",
    "Software Engineering",
    "Mathematics",
    "Blog",
    "Publication"
  ],
  "author": "Kyo Euler <@kyoeuler>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onetype/onetype.github.io/issues"
  },
  "homepage": "https://github.com/onetype/onetype.github.io#readme",
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "mocha": "^6.2.0",
    "node-sass": "^4.12.0",
    "nyc": "^14.1.1",
    "sass-lint": "^1.13.1",
    "sass-true": "^5.0.0"
  }
}
